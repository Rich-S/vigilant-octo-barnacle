<%= form_for(@project) do |f| %>

  <% @project.name ||= "New Project" %>
  <% if @project.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@project.errors.count, "error") %> prohibited this project from being saved:</h2>
      <ul>
        <% @project.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
    <h4 class="modal-title" id="myModalLabel">Superior Construction</h4>
  </div>

  <div class="modal-body">

    <div class="form-group">
      <%= f.text_field(:name, class: "form-control") %>
    </div>
    <div class="form-group">
      <%= f.text_area(:description, class: "form-control", placeholder: "Project Description") %>
    </div>
    <div class="control-group" id="checkboxes">
      <%= f.collection_check_boxes :user_ids, User.all, :id, :name %> 
    </div>  
    <%= f.fields_for :project_materials do |pm| %>
    <div class="row">
      <div class="form-group">
        <div class="col-lg-5">
        <%= pm.collection_select :material_id, Material.order(:name), :id, :name, { prompt: "Please select", include_blank: false }, class: "form-control" %>
        </div>
        <div class="col-lg-5">
        <%= pm.number_field :quantity, class: "form-control" %> 
        </div> 
        <div class="col-lg-2">
        <%= pm.check_box :_destroy %>Delete
        </div>
      </div>
    </div><div class="space"></div>
    <% end %>

  </div><!--modal-body-->

  <div class="modal-footer">
    <%= f.submit class: "btn btn-primary" %>
    <%= link_to "Cancel", projects_path, class: "btn-default", data: {dismiss: "modal"} %>
  </div><!--modal-footer-->

<% end %>
